<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/oldman_name_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0fcccccc"
        android:padding="10dp"
        android:text="nihao "
        android:textColor="#000000"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/sub_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="项目"
            android:textColor="#000000" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作"
            android:textColor="#000000" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_fragmentone_planitemdialog_rv"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"></android.support.v7.widget.RecyclerView>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0fcccccc"
        android:padding="10dp"
        android:text="备注"
        android:textColor="#000000"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/oldman_name_beizhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:textColor="#000000"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/main_itmedialog_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="取消" />

        <Button
            android:id="@+id/main_itmedialog_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:text="确定" />
    </RelativeLayout>
</LinearLayout>